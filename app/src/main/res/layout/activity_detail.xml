<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DetailActivity">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Title"
        android:layout_margin="5dp"
        android:height="30dp"
        android:textColor="@color/cardview_dark_background"
        />
    <ImageView
        android:id="@+id/dImageIv"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:layout_below="@id/dTitleTv"
        android:layout_centerHorizontal="true"
        android:src="@color/cardview_dark_background"/>
    <TextView
        android:id="@+id/dDescrTv"
        android:layout_below="@id/dImageIv"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="Descrption:"
        />
    <TextView
        android:id="@+id/dVenueTv"
        android:layout_below="@id/dDescrTv"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="Venue:"
        />
    <TextView
        android:id="@+id/dDayTv"
        android:layout_below="@id/dVenueTv"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Day:"
        />
    <TextView
        android:id="@+id/dTypeTv"
        android:layout_below="@id/dDayTv"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="Type of The Event"
        />

</RelativeLayout>

</LinearLayout>